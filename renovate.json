{
  "extends": ["config:base"],
  "timezone": "America/Toronto",
  "schedule": ["* 0-3 * * *"],
  "dependencyDashboard": true,
  "automerge": false,
  "baseBranches": ["master"],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchPackagePatterns": ["^eslint", "^prettier"],
      "groupName": "Dev tooling updates",
      "labels": ["dev"]
    },
    {
      "matchManagers": ["dockerfile"],
      "enabled": false
    }
  ]
}
